<Window x:Class="PasswordGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF5C6F6F">
    <Border CornerRadius="8">
        <Grid>
            <Label Content="Password Generator" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="30" Visibility="Visible" FontFamily="CommitMono"/>
            <Label x:Name="lblPasswordLength"  Content="Password Length: " HorizontalAlignment="Left" Margin="267,163,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18" Visibility="Visible" FontFamily="CommitMono" Width="186"/>
            <TextBox x:Name="txtPasswordLength" HorizontalAlignment="Left" Height="22" Margin="476,167,0,0" TextWrapping="Wrap" Text="" BorderThickness="0" VerticalAlignment="Top" Width="41" FontSize="16" Background="#FFA49B9B" Visibility="Visible" TabIndex="1"/>
            <CheckBox x:Name="chkUpperCase" Content="Upper Case" HorizontalAlignment="Left" Margin="413,0,0,0" VerticalAlignment="Center" Background="#FFA49B9B" Visibility="Visible" FontSize="14" FontFamily="CommitMono" TabIndex="3"/>
            <CheckBox x:Name="chkLowerCase" Content="Lower Case" HorizontalAlignment="Left" Margin="284,0,0,0" VerticalAlignment="Center" Background="#FFA49B9B" Visibility="Visible" FontSize="14" FontFamily="CommitMono" TabIndex="2"/>
            <CheckBox x:Name="chkNumbers" Content="Numbers" HorizontalAlignment="Center" Margin="0,241,0,0" VerticalAlignment="Top" Background="#FFA49B9B" Visibility="Visible" FontSize="14" FontFamily="CommitMono" TabIndex="4"/>
            <CheckBox x:Name="chkSpecialCharacters" Content="Special Characters" HorizontalAlignment="Center" Margin="0,267,0,0" VerticalAlignment="Top" Background="#FFA49B9B" Visibility="Visible" FontSize="14" FontFamily="CommitMono" TabIndex="5"/>
            <Button x:Name="btnGenerate" FontWeight="Bold" Content="Generate" HorizontalAlignment="Center" Margin="0,310,0,0" VerticalAlignment="Top" Width="74" Height="23" Click="btnGenerate_Click" Background="#FFA49B9B" Visibility="Visible" FontFamily="CommitMono" TabIndex="6"/>

            <Label x:Name="lblPassword" Content="Password" HorizontalAlignment="Center" Margin="0,132,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20" Visibility="Hidden" FontFamily="CommitMono"/>
            <TextBox x:Name="txtPassword" HorizontalAlignment="Center" Height="24" Margin="0,184,0,0" TextWrapping="Wrap" Text="" BorderThickness="0" VerticalAlignment="Top" Width="208" FontSize="16" Background="#FFA49B9B" Visibility="Hidden" FontFamily="CommitMono" Focusable="False" IsEnabled="False"/>

        </Grid>
    </Border>
</Window>
